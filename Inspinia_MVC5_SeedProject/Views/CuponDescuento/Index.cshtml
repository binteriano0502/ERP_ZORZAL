@model IEnumerable<ERP_GMEDINA.Models.tbCuponDescuento>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Cupón Descuento</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista Cupón Descuento</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Cupón Descuento", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    Código
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbSucursal.suc_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_PorcentajeDescuento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_MaximoMontoDescuento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_MontoDescuento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_Redimido)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_Anulado)
                                </th>
                                <th>Opción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-anulado="@item.cdto_Anulado">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbSucursal.suc_Descripcion)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_PorcentajeDescuento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_MaximoMontoDescuento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_MontoDescuento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_Redimido)
                                    </td>
                                    @if (item.cdto_Anulado == false)
                                    {
                                        <td> No</td>
                                    }
                                    else
                                    {
                                        <td>Si</td>
                                    }
                                    @if (item.cdto_Anulado == false)
                                    {
                                        <td>
                                            @Html.ActionLink("Detalles", "Details", new { id = item.cdto_ID }, new { @class = "btn btn-primary btn-xs" })
                                            @Html.ActionLink("Editar", "Edit", new { id = item.cdto_ID }, new { @class = "btn btn-white btn-xs" })
                                            @Html.ActionLink("Imprimir", "", null, new { id = "btnImprimir", @class = "btn btn-info btn-xs" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.ActionLink("Detalles", "Details", new { id = item.cdto_ID }, new { @class = "btn btn-primary btn-xs" })

                                            @*btn no update ya esta anulado*@
                                            <button id="bottonAnular" name="bottonAnular" type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#Anulado">
                                                Editar
                                            </button>
                                            @Html.ActionLink("Imprimir", "", null, new { id = "btnImprimir", @class = "btn btn-info btn-xs" })
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@* -------------------Modal Anulado no editable---------------- *@
<div class="modal fade" id="Anulado" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cupón Descuento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                El Cupón Descuento no puede ser Editada porque fue Anulada.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
@* -------------------FIN Modal Anulado no editable---------------- *@


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
<script>
    $('#btnImprimir').click(function () {
        confirm('¿Deseas Imprimir Cupón Descuento?');
    });
</script>

