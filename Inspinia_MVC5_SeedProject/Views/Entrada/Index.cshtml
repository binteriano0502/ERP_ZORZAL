@model IEnumerable<ERP_GMEDINA.Models.tbEntrada>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Entradas</h2>
        @*<ol class="breadcrumb">
                <li class="active">
                    <strong>tbBanco</strong>
                </li>
            </ol>*@
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Entradas</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Entrada", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-responsive" style="width:100%" id="tbEntrada">
                        <thead>
                            <tr>
                                <th>
                                    Nombre Bodega
                                    @*@Html.DisplayNameFor(model => model.tbBodega1.bod_Nombre)*@
                                </th>
                                <th>
                                    Numero Formato
                                    @*@Html.DisplayNameFor(model => model.ent_NumeroFormato)*@
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ent_FechaElaboracion)
                                </th>
                                <th>
                                    Tipo Entrada
                                    @*@Html.DisplayNameFor(model => model.tbTipoEntrada.tent_Descripcion)*@
                                </th>
                                <th>
                                    Estado
                                    @*@Html.DisplayNameFor(model => model.tbEstadoMovimiento.estm_Descripcion)*@
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbBodega1.bod_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ent_NumeroFormato)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ent_FechaElaboracion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbTipoEntrada.tent_Descripcion)
                                    </td>
                                    <td>
                                        @if (item.estm_Id == 2)
                                        {
                                            <p> Activo</p>
                                        }
                                        else if (item.estm_Id == 23)
                                        {
                                            <p>Inactivo</p>
                                        }
                                        else if (item.estm_Id == 1)
                                        {
                                            <p style="color:maroon">Aplicado</p>
                                        }
                                        else if (item.estm_Id == 24)
                                        {
                                            <p style="color:maroon">Anulado</p>
                                        }
                                    </td>

                                    <td>
                                        @if (item.estm_Id == 24)
                                        {
                                            <p style="color:maroon">No Habilitado</p>
                                        }
                                        else if (item.estm_Id == 1)
                                        {
                                            <input type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#ModalImprimir" value="Imprimir" />
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Detalles", "Details", new { id = item.ent_Id }, new { @class = "btn btn-primary btn-xs" })
                                            @Html.ActionLink("Editar", "Edit", new { id = item.ent_Id }, new { @class = "btn btn-white btn-xs" })
                                            <input type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#ModalImprimir" value="Imprimir" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@**********************************************************************************MODALES*****************************************************************************@
@**********************************************************************************MODALES*****************************************************************************@
@**********************************************************************************MODALES*****************************************************************************@
@*modal para imprimir*@
<div class="modal fade" id="ModalImprimir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Imprimir Entrada</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea Imprimir Entrada?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Create","Entrada")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tbEntrada').DataTable(
        {
            "searching": true,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sSearch": "Buscar",
                "sLengthMenu": "Mostrar _MENU_ registros por página",
                "sInfo": "Mostrando _START_ a _END_ Entradas",
            }
        });
    });
</script>
