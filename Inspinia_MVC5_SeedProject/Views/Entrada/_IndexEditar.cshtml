@model IEnumerable<ERP_GMEDINA.Models.tbEntradaDetalle>
@using ERP_GMEDINA.Models

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Entrada Detalle</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#RegistrarNuevoDetalle">Registrar Detalle</button>
                        @*@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})*@
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-responsive" style="width:100%" id="tbEntradaDetalle">
                        <thead>
                            <tr>
                                <th>
                                    Código Producto
                                </th>
                                <th>
                                    Nombre Producto
                                </th>
                                <th>
                                    Unidad Medida
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Codigo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProducto.prod_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbUnidadMedida.uni_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.entd_Cantidad)
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalDetalle_@item.ent_Id">Detalles</button>
                                        <button type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#ModalEditar_@item.entd_Id">Editar</button>
                                        @*@Html.ActionLink("Editar", "_CrearDetalleEntrada", new { id = item.ent_Id }, new { @class = "btn btn-primary btn-xs" })*@
                                    </td>
                                </tr>
                                @*Modal Editar*@
                                <div>
                                    <div class="modal fade" id="ModalEditar_@item.entd_Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel">Editar Detalle Entrada</h4>
                                                </div>
                                                <div class="modal-body" id="frmAgregarCasoExito">
                                                    @Html.Partial("_EditarDetalleEntrada", new ERP_GMEDINA.Models.tbEntradaDetalle() {
                                                   entd_Id = item.entd_Id,
                                                   ent_Id = item.ent_Id,
                                                   prod_Codigo = item.prod_Codigo,
                                                   entd_Cantidad =item.entd_Cantidad,
                                                   entd_UsuarioCrea = item.entd_UsuarioCrea,
                                                   entd_FechaCrea = item.entd_FechaCrea,
                                                   uni_Id = item.uni_Id
                                               })
                                                    <div class="form-group">
                                                        <div class="col-md-12 text-center">
                                                            <button class="btn btn-primary" type="button" id="btnActualizarentrada" onclick="btnActualizarentrada(@item.entd_Id);">Guardar</button>
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Modal Detalles*@
                                <div>
                                    <div class="modal fade" id="ModalDetalle_@item.ent_Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel">Detalle Detalle Entrada</h4>
                                                </div>

                                                <div class="form-group">
                                                    <div class="modal-body" id="frmAgregarCasoExito">
                                                        @Html.Partial("_DetallesDeEntrada", new ERP_GMEDINA.Models.tbEntradaDetalle() { entd_UsuarioCrea = item.entd_UsuarioCrea,entd_FechaCrea=item.entd_FechaCrea,entd_UsuarioModifica=item.entd_UsuarioModifica,entd_FechaModifica=item.entd_FechaModifica,ent_Id=item.ent_Id, prod_Codigo = item.prod_Codigo, entd_Cantidad = item.entd_Cantidad, uni_Id = item.uni_Id, }))
                                                        <div class="col-md-12 text-center">
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tbEntradaDetalle').DataTable(
        {
            "searching": true,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sSearch": "Buscar",
                "sLengthMenu": "Mostrar _MENU_ registros por página",
                "sInfo": "Mostrando _START_ a _END_ Entradas",
            }
        });
    });
</script>
