                @{string IdDrop = "uni_IdListEdit";}
                @{ string Vie = "uni_IdList";}
                @Html.DropDownList("uni_Id", (IEnumerable<SelectListItem>)Context.Items[Vie], "Seleccione", new { @class = "form-control", id = @IdDrop })
                @*@Html.DropDownListFor(model => model.uni_Id, (SelectList)ViewBag.unidad, new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.uni_Id)
