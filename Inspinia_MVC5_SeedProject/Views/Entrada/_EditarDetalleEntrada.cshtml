                </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.entd_Cantidad, "Cantidad", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.entd_Cantidad, new { htmlAttributes = new { @class = "form-control", @id = "cantidadEdit" } })
                @Html.ValidationMessageFor(model => model.entd_Cantidad)
            </div>
            @*@Html.LabelFor(model => model.uni_Id, "Unidad", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.uni_Id, new { htmlAttributes = new { @class = "form-control", @id = "unidadEdit" } })
                    @Html.ValidationMessageFor(model => model.uni_Id)
                </div>*@
