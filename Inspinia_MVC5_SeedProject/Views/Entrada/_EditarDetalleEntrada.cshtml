@model ERP_GMEDINA.Models.tbEntradaDetalle
@using ERP_GMEDINA.Models
@using (Ajax.BeginForm("entradadetalle_actualizar", "Entrada", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "EditarDetalleEntrada" }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

