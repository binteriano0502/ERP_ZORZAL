@model IEnumerable<ERP_GMEDINA.Models.tbEstadoMovimiento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (ViewBag.smserror != "" && ViewBag.smserror != null)
{     <div class="col-md-12" id="mensaje">
        <div class="alert alert-warning alert-danger">
            <button type="button" class="close" data-dissmiss="alert" aria-hidden="true">@Html.ActionLink("X", "index", new { @class = "btn btn-primary " })</button>             <h4><i class="icon fa fa-warning"></i>Alerta</h4>             <h2>@ViewBag.smserror</h2>
        </div>
    </div> }


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Estado Movimiento</h2>
    </div>
</div>



  
  

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Estado Movimiento</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Estado Movimiento", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-responsive" style="width:100%" id="datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.estm_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.estm_Descripcion)
                                </th>

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.estm_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.estm_Descripcion)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Detalle", "Details", new { id = item.estm_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.estm_Id }, new { @class = "btn btn-white btn-xs" })
                                        <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#ModalEstado_@item.estm_Id" value="Eliminar" >Eliminar</button>
                                    </td>
                                </tr>

                                <div class="modal fade" id="ModalEstado_@item.estm_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Eliminar Estado</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                ¿Está seguro que quiere Eliminar?
                                            </div>
                                            <div class="modal-footer">
                                                @Html.ActionLink("Sí", "Eliminar", new { id = item.estm_Id }, new { @class = "btn btn-danger" })
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            </tbody>
                            </table>

                        </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').DataTable(
        {
            "searching": true,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sSearch": "Buscar",
                "sLengthMenu": "Mostrar _MENU_ registros por página",
                "sInfo": "Mostrando _START_ a _END_ Entradas",
            }
        });
    });
</script>
