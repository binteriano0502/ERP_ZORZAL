@model ERP_GMEDINA.Models.tbInventarioFisico

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Inventario Fisico</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Levantar Inventario Fisico</h5>
                </div>
                <div class="ibox-content">

@using (Html.BeginForm("Create", "InventarioFisico", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.LabelFor(model => model.invf_FechaInventario, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.invf_FechaInventario, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @id = "FechaElaboracion" , @readonly = "readonly"} })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.invf_FechaInventario)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.tbBodega.bod_Id, "Bodega", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("bod_Id", (IEnumerable<SelectListItem>)ViewBag.bod_Id,"Seleccione", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.tbBodega.bod_Id)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.invf_ResponsableBodega, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.invf_ResponsableBodega)
                                <p style="color:red">@Html.ValidationMessageFor(model => model.invf_ResponsableBodega)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.invf_Descripcion, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.invf_Descripcion, new { @class = "form-control"})
                               <p style="color:red"> @Html.ValidationMessageFor(model => model.invf_Descripcion)</p>
                            </div>
                        </div>

                        <div class="form-group" hidden="hidden">
                            @Html.LabelFor(model => model.estif_Id, "Estado Inventario Fisico", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("estif_Id", (IEnumerable<SelectListItem>)ViewBag.estif_Id, new { @class = "form-control"  })
                                @Html.ValidationMessageFor(model => model.estif_Id)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content" id="Crear">
                                        @*@Html.Partial("_CreateInstructorCasosExitos", new InstructorCasosExitos())*@
                                        @Html.Partial("_CreateInvFisicoDetalle", new ERP_GMEDINA.Models.tbInventarioFisicoDetalle())
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                            </div>
                        </div>

                    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>


