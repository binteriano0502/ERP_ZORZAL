@model ERP_GMEDINA.Models.tbListadoPrecioDetalle
@using ERP_GMEDINA.Models


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <input name="ped_Id" id="ped_Id" type="hidden" value="@ViewBag.ped_idd">
                        <div class="form-horizontal">
                            <div class="form-group">

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.prod_Codigo, new { @class = "control-label col-md-3" })

                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.prod_Codigo, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @readonly = "readonly" } })
                                    <p style="color:red">
                                        @Html.ValidationMessageFor(model => model.prod_Codigo)
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.tbProducto.prod_CodigoBarras, "Código Barra", new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.tbProducto.prod_CodigoBarras, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.tbProducto.prod_CodigoBarras)
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.tbProducto.prod_Descripcion, new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.tbProducto.prod_Descripcion, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.lispd_PrecioMayorista, new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.lispd_PrecioMayorista, new { @onkeyup = "soloNumeros(e)", @id = "pedd_Cantidad_Ped" })
                                    @Html.ValidationMessageFor(model => model.lispd_PrecioMayorista)
                                </div>
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(model => model.lispd_PrecioMinorista, new { @class = "control-label col-md-3", @id = "pedd_Cantidad_Ped" })

                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.lispd_PrecioMinorista, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.lispd_PrecioMinorista)
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.lispd_DescCaja, new { @class = "control-label col-md-3", @id = "pedd_Cantidad_Ped" })

                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.lispd_DescCaja, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.lispd_DescCaja)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.lispd_DescGerente, new { @class = "control-label col-md-3", @id = "pedd_Cantidad_Ped" })

                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.lispd_DescGerente, new { @class = "form-control" } )
                                    @Html.ValidationMessageFor(model => model.lispd_DescGerente)
                                </div>
                            </div>  
                



                            <div class="form-group">
                                @Html.LabelFor(model => model.lispd_UsuarioCrea, new { @class = "control-label col-md-3", @id = "lispd_UsuarioCrea_Lp" })

                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.lispd_UsuarioCrea, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.lispd_UsuarioCrea)
                                </div>
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(model => model.lispd_FechaCrea, new { @class = "control-label col-md-3", @id = "lispd_FechaCrea_Lp" })

                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.lispd_FechaCrea, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.lispd_FechaCrea)
                                </div>
                            </div>


                            <input type="hidden" id="lispd_UsuarioCrea_Lp" name="lispd_UsuarioCrea" />
                            <input type="hidden" id="lispd_FechaCrea_Lp" name="lispd_FechaCrea"/>


                            <br />
                            <br />




                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-10">
                                    <button class="btn btn-primary" type="submit" id="BtnGuardarDetalle" tabindex="10"> Guardar </button>
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>

<div>
    <div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
                </div>
                <div class="modal-body" id="frmEditarMunicipios">
                    @Html.Partial("_IndexProducto", (List<tbProducto>)ViewBag.Producto)
                </div>
            </div>
        </div>
    </div>
</div>




<script>
    function comprobar()
    {

            var PMA = $('#lispd_PrecioMayorista').val();
            var PMI = $('#lispd_PrecioMinorista').val();
            if (PMA<PMI)
            {
                alert("El precio mayorista debe ser menor que el precio minorista.");
                return false;
            }
            return true;
        }



    $("#lispd_DescCaja").blur(function () {
        valido = document.getElementById('smsCantidad');

        var DescuentoCaja = $('#lispd_DescCaja').val();



        if (parseFloat(DescuentoCaja) < 0 || parseFloat(DescuentoCaja)> 100) {
            //console.log("facturada", CantFacturada)
            //console.log(CantDevolucion)
            //console.log("if")
            valido.innerText = "El valor debe estar entre 0 a 100";
            $('#lispd_DescCaja').val("");
            $('#lispd_DescCaja').focus();
        }
        else {
            //console.log("else")
            valido.innerText = "";
        }


    });

    $("#lispd_DescGerente").blur(function () {

        valido1 = document.getElementById('desccaja');

        var DescuentoGerente = $('#lispd_DescGerente').val();




        if (parseFloat(DescuentoGerente) < 0 || parseFloat(DescuentoGerente) > 100) {
            //console.log("facturada", CantFacturada)
            //console.log(CantDevolucion)
            //console.log("if")
            valido1.innerText = "El valor debe estar entre 0 a 100";
            $('#lispd_DescGerente').val("");
            $('#lispd_DescGerente').focus();
        }
        else {
            //console.log("else")
            valido1.innerText = "";
        }





    });





    //---------------------------------Ctrl + G (GuardarRegistro)------------------------------
    $(document).keydown(function (e) {
        if ((e.key == 'g' || e.key == 'G') && (e.ctrlKey || e.metaKey)) {
            e.preventDefault();
            $("form").submit();
            return false;
        }
        return true;
    });





</script>

