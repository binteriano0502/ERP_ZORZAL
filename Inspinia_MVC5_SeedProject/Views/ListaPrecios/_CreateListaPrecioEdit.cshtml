                                    @Html.EditorFor(model => model.lispd_PrecioMinorista, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @value = "0" } })
                                    <div id="validacionPrecioMinoristaCreate">
                                        <p style="color:red">@Html.ValidationMessageFor(model => model.lispd_PrecioMinorista)</p>
                                    </div>

                                </div>
                            </div>
                        </div>




                        <div class="form-group">
                            @Html.LabelFor(model => model.lispd_DescCaja, "Descuento Caja (%)", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.lispd_DescCaja, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @value = "0" } })
                                <div id="validacionDescuentoCajaCreate">
                                    <p id="desccaja">@Html.ValidationMessageFor(model => model.lispd_DescCaja)</p>
                                </div>


                            </div>

                            @Html.LabelFor(model => model.lispd_DescGerente, "Descuento Gerenteeeee (%)", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.lispd_DescGerente, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @value = "0" } })
                                <div id="validacionDescuentoGerenteCreate">
                                    <p id="">@Html.ValidationMessageFor(model => model.lispd_DescGerente)</p>
                                </div>

                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

