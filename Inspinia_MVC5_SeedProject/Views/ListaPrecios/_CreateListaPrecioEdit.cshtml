                        <div class="form-group">


                            @Html.LabelFor(model => model.tbProducto.prod_Codigo, "Código Producto", new { @class = "control-label col-md-2", @readonly = "readonly" })
                            <div class="col-md-4 ">
                                @Html.EditorFor(model => model.tbProducto.prod_Codigo)
