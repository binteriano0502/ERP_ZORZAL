@model ERP_GMEDINA.Models.tbListadoPrecioDetalle
@using ERP_GMEDINA.Models
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista Precio Detalle </h5>
                    <div class="form-group">

                    </div>
                </div>

                <div class="ibox-content">


                    <div class="form-horizontal">
                        @*@Html.ValidationSummary(true)*@



           
                        <div class="form-group">
                            @Html.LabelFor(model => model.tbProducto.prod_CodigoBarras, "Código Barra Producto", new { @class = "control-label col-md-2" })
                            <div class="col-md-4 ">
                                @Html.EditorFor(model => model.tbProducto.prod_CodigoBarras, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
