                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => salidaDetalle.tbProducto.prod_Modelo, new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    <input type="text" id="prod_Modelo_edit" name="prod_Modelo" class="form-control"  />
                                    @Html.ValidationMessageFor(m => salidaDetalle.tbProducto.prod_Modelo)
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(m => salidaDetalle.tbProducto.prod_Talla, new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    <input type="text" id="prod_Talla_edit" name="prod_Talla" class="form-control"/>
                                    @Html.ValidationMessageFor(m => salidaDetalle.tbProducto.prod_Talla)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => salidaDetalle.tbProducto.prod_Color, new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    <input type="text" id="prod_Color_edit" name="prod_Color" class="form-control" />
                                    @Html.ValidationMessageFor(m => salidaDetalle.tbProducto.prod_Color)
