@model ERP_GMEDINA.Models.tbFacturaDetalle
@using ERP_GMEDINA.Models

@using (Ajax.BeginForm("UpdateFacturaDetalle", "Factura", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "EditarFacturaDetalle" }))
{
    @*@Html.AntiForgeryToken()*@

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fact_Id)
        @Html.HiddenFor(model => model.factd_Id)
        @**Auditoria*@
        @Html.HiddenFor(model => model.factd_UsuarioCrea)
        @Html.HiddenFor(model => model.factd_FechaCrea)
        @Html.HiddenFor(model => model.factd_UsuarioModifica)
        @Html.HiddenFor(model => model.factd_FechaModifica)
        @Html.HiddenFor(model => model.tbUsuario.usu_Nombres)
        @Html.HiddenFor(model => model.tbUsuario.usu_Apellidos)
        @Html.HiddenFor(model => model.tbUsuario1.usu_Nombres)
        @Html.HiddenFor(model => model.tbUsuario1.usu_Apellidos)

        <div class="form-group">
            @Html.LabelFor(model => model.prod_Codigo, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.prod_Codigo)
                @Html.ValidationMessageFor(model => model.prod_Codigo)
            </div>
            @Html.LabelFor(model => model.tbProducto.prod_Descripcion, new { @class = "control-label col-md-1" })
            <div class="col-md-5">
                <input type="text" id="tbProducto_prod_Descripcion" name="tbProducto_prod_Descripcion" class="form-control col-md-2" autocomplete="off" />
                @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
            </div>           
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.factd_Cantidad, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.factd_Cantidad)
                @Html.ValidationMessageFor(model => model.factd_Cantidad)
            </div>
           
            @Html.LabelFor(model => model.factd_PorcentajeDescuento, new { @class = " control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.factd_PorcentajeDescuento)
                @Html.ValidationMessageFor(model => model.factd_PorcentajeDescuento)
            </div>
            @Html.LabelFor(model => model.factd_MontoDescuento, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.factd_MontoDescuento)
                @Html.ValidationMessageFor(model => model.factd_MontoDescuento)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.factd_PrecioUnitario, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.factd_PrecioUnitario)
                @Html.ValidationMessageFor(model => model.factd_PrecioUnitario)
            </div>
            @Html.LabelFor(model => model.factd_Impuesto, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.factd_Impuesto)
                @Html.ValidationMessageFor(model => model.factd_Impuesto)
            </div>
            <div class="form-group">
                <label class="control-label col-md-1">Impuesto</label>
                <div class="col-md-2">
                    <input id="Impuesto" type="text" class="form-control" readonly />
                </div>
            </div>          
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Subtotal</label>
            <div class="col-md-3">
                <input id="SubtotalProducto" type="text" class="form-control" readonly />
            </div>
            <label class="control-label col-md-1">Total</label>
            <div class="col-md-2">
                <input id="TotalProducto" type="text" value="" class="form-control" readonly />
            </div>
        </div>        

        <div class="form-group">
            <hr />
            <div class="col-md-12 text-right">
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white btn-sm" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

