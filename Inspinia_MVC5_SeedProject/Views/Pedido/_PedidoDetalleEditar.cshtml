@model ERP_GMEDINA.Models.tbPedidoDetalle
@using (Ajax.BeginForm("UpdatePedidoDetalle", "Pedido", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "EditarPed" }))
{




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Pedido Detalle </h5>
                </div>
                <div class="ibox-content">



    <div class="form-horizontal">




        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.pedd_Id)
        @Html.HiddenFor(model => model.ped_Id)
        @**Auditoria*@
        @Html.HiddenFor(model => model.pedd_UsuarioCrea)
        @Html.HiddenFor(model => model.pedd_FechaCrea)
