        @Html.HiddenFor(model => model.pedd_FechaModifica)
        @Html.HiddenFor(model => model.tbUsuario.usu_Nombres)
        @Html.HiddenFor(model => model.tbUsuario.usu_Apellidos)
        @Html.HiddenFor(model => model.tbUsuario1.usu_Nombres)
        @Html.HiddenFor(model => model.tbUsuario1.usu_Apellidos)


        <div class="form-group">
            @Html.LabelFor(model => model.ped_Id, "ped_Id", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pedd_Id)
                @Html.ValidationMessageFor(model => model.ped_Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.prod_Codigo, "prod_Codigo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.prod_Codigo)
                @Html.ValidationMessageFor(model => model.prod_Codigo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pedd_Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pedd_Descripcion)
                @Html.ValidationMessageFor(model => model.pedd_Descripcion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pedd_Cantidad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pedd_Cantidad)
                @Html.ValidationMessageFor(model => model.pedd_Cantidad)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pedd_CantidadFacturada, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pedd_CantidadFacturada)
                @Html.ValidationMessageFor(model => model.pedd_CantidadFacturada)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
            </div>
        </div>
    </div>


                </div>
            </div>
        </div>
    </div>
 </div>


}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
