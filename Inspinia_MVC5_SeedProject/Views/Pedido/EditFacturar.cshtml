@model ERP_GMEDINA.Models.tbPedido
@using ERP_GMEDINA.Models

@{
    ViewBag.Title = "Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Editar Pedidos</h2>
  
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="/Pedido/Index">Regresar</a>
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Pedidos</h5>
                </div>
                <div class="ibox-content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ped_Id)



            <div class="form-group">
                <label class="control-label col-md-2">Número Pedido</label>

                <div class="col-md-3">
                    @Html.EditorFor(model => model.ped_Id, new { htmlAttributes = new { disabled = "disabled", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.ped_Id)
                </div>
          
                @Html.LabelFor(model => model.esped_Id, "Estado", new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.DropDownList("esped_Id", null, "Seleccione Estado Pedido", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ped_Id)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Sucursal</label>

                <div class="col-md-3">
                    @Html.EditorFor(model => model.tbSucursal.suc_Descripcion)
                    @Html.ValidationMessageFor(model => model.suc_Id)
                </div>
        
                @Html.LabelFor(model => model.ped_FechaElaboracion, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.ped_FechaElaboracion, "{0:yyyy-MM-dd}")
                    @Html.ValidationMessageFor(model => model.ped_FechaElaboracion)
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2">Número Cliente</label>

                <div class="col-md-3">
                    @Html.EditorFor(model => model.clte_Id)
                    @Html.ValidationMessageFor(model => model.clte_Id)
                </div>

                <label class="control-label col-md-2">Cliente</label>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.tbCliente.clte_Nombres)
                    @Html.ValidationMessageFor(model => model.tbCliente.clte_Nombres)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ped_FechaEntrega, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.ped_FechaEntrega)
                    @Html.ValidationMessageFor(model => model.ped_FechaEntrega)
                </div>

                <label class="control-label col-md-2">Número Factura</label>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.tbFactura.fact_Id)
                    @Html.ValidationMessageFor(model => model.fact_Id)
                </div>
            </div>

            @Html.Partial("_EditPedidoDetalle", Model.tbPedidoDetalle)
            
            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                    <a class="btn btn-white" href="@Url.Action("Create","Factura")">Facturar</a>
                </div>
            </div>
        </div>

    }


                </div>
            </div>

            <div class="ibox-content">
                <table class="table table-striped">
                    <tr>
                        <th></th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                    <tr>
                        <td>Creado</td>
                        <td>@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario)</td>
                        <td>@Html.DisplayFor(model => model.ped_FechaCrea)</td>
                    </tr>
                    <tr>
                        <td>Modificado</td>
                        <td>@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario)</td>
                        <td>@Html.DisplayFor(model => model.ped_FechaModifica)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
 </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
