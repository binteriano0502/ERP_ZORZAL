@model IEnumerable<ERP_GMEDINA.Models.tbPedidoDetalle>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-tools">
                    <div class="col-md-offset-11">
                        <button id="AddProducto" value="Mostrar" type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#ModalAgregarDetalle"><span>Añadir Pedido Detalle</span></button>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped" id="PedidoDetalle">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbProducto.prod_Codigo)
                                </th>


                                <th>
                                    @Html.DisplayNameFor(model => model.tbProducto.prod_Descripcion)
                                </th>

                    
                                <th>
                                    @Html.DisplayNameFor(model => model.pedd_Cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pedd_CantidadFacturada)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProducto.prod_Codigo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProducto.prod_Descripcion)
                                    </td>
                       
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pedd_Cantidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pedd_CantidadFacturada)
                                    </td>

                                    <td>
                                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#Editar_@item.pedd_Id">
                                            Editar
                                        </button>
                                    </td>
                                </tr>
                                <div class="modal fade" id="Editar_@item.pedd_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Editar  Pedido Detalle</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div id="EditarSolicitudEfectivoDetalle" class="modal-body">
                                                @Html.Partial("_PedidoDetalleEditar", new ERP_GMEDINA.Models.tbPedidoDetalle() { pedd_Id = item.pedd_Id, ped_Id = item.ped_Id, prod_Codigo = item.prod_Codigo, pedd_Cantidad = item.pedd_Cantidad, pedd_CantidadFacturada = item.pedd_CantidadFacturada, pedd_UsuarioCrea = item.pedd_UsuarioCrea, pedd_FechaCrea = item.pedd_FechaCrea, pedd_UsuarioModifica = item.pedd_UsuarioModifica, pedd_FechaModifica = item.pedd_FechaModifica })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>


<div class="modal fade" id="ModalAgregarDetalle" tabindex="-1" role="dialog" aria-labelledby="DetalleNumeracion" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Añador Pedido Detalle</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="AjaxCreatePedidoDetalle">
                @Html.Partial("_CreateDetallePedido", new ERP_GMEDINA.Models.tbPedidoDetalle())
            </div>
        </div>
    </div>
</div>
