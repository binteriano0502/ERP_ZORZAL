@model ERP_GMEDINA.Models.tbMovimientoCaja
@using ERP_GMEDINA.Models

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Movimiento Caja</h2>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Apertura</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("CreateApertura", "MovimientoCaja", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-horizontal">
                                <div class="form-group col-md-7">
                                    <label class="control-label col-md-2">Sucursal</label>
                                    <div class="col-md-7">
                                        <input type="text" class="form-control " Value="San pedro sula" readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-5">
                                @Html.LabelFor(model => model.cja_Id, "Número Caja", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("cja_Id", null, "Seleccione caja", new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.cja_Id)
                                </div>
                            </div>
                            <div class="form-group col-md-7">
                                @Html.LabelFor(model => model.tbCaja.cja_Descripcion, "Descripción Caja", new { @class = "control-label col-md-2" })
                                <div class="col-md-7">
                                    @Html.EditorFor(model => model.tbCaja.cja_Descripcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.tbCaja.cja_Descripcion)
                                </div>
                            </div> 

                            <div class="form-group col-md-5">
                                @Html.LabelFor(model => model.mocja_FechaApertura, "Fecha Apertura", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.mocja_FechaApertura, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @id = "fechaapertura", maxlength = 10 } })
                                    @Html.ValidationMessageFor(model => model.mocja_FechaApertura)
                                </div>
                            </div>

                            <div class="form-group col-md-7">
                                @Html.LabelFor(model => model.mocja_UsuarioApertura, "Usuario Apertura", new { @class = "control-label col-md-2" })
                                <div class="col-md-7">
                                    @Html.EditorFor(model => model.mocja_UsuarioApertura)
                                    @Html.ValidationMessageFor(model => model.mocja_UsuarioApertura)
                                </div>
                            </div>

                            <div class="form-horizontal">
                                <div class="form-group col-md-5">
                                    <label class="control-label col-md-2">Monto Inicial</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control " readonly>
                                    </div>
                                </div>
                            </div>

                            
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.Partial("_CreateAperturaDetalle")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">
                                        <div class="form-group">
                                            <div class="col-md-12 text-center">
                                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                            </div>
                                        </div>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/app/Apertura.js"></script>
    <script src="~/Scripts/app/Datepicker.js"></script>
    <script src="~/Scripts/app/AperturaDetalle.js"></script>



<script type="text/javascript">
jQuery('input,select').each(function() {
    var req = jQuery(this).attr('data-val-required');
     var label = jQuery('label[for="' + jQuery(this).attr('id') + '"]');
     var text = label.text();
     if (text.length > 0) {
      label.append('<span style="color:red"> *</span>');
    }
});
</script>


}



