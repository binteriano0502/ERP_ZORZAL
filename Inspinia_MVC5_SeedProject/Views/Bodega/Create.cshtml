@model ERP_GMEDINA.Models.tbBodega
@using ERP_GMEDINA.Models
@{
}
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .validation-error {
        color: red;
        font-size: small;
    }
</style>
@{
    var ListadoMunicipio = new ERP_GMEDINA.Models.tbMunicipio();
    var ListadoDepartamento = new ERP_GMEDINA.Models.tbDepartamento();
}

@*Font Awesome*@
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Bodegas</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>


@using (Html.BeginForm("Create", "Bodega", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Registrar Bodega</h5>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.bod_UsuarioCrea)
                            @Html.HiddenFor(model => model.bod_FechaCrea)

                            <div class="form-group">
                                <label class="control-label col-md-2">Nombre<span style="color:red">*</span></label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.bod_Nombre)
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.bod_Nombre) </p>
                                </div>
                                <label class="control-label col-md-2">Responsable<span style="color:red">*</span></label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.bod_ResponsableBodega)
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.bod_ResponsableBodega) </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Departamento<span style="color:red">*</span></label>
                                <div class="col-md-4">
                                    @Html.DropDownList("dep_Codigo", (IEnumerable<SelectListItem>)ViewBag.DepartamentoList, "Seleccione", new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.tbMunicipio.dep_Codigo)</p>
                                </div>
                                <label class="control-label col-md-2">Municipio<span style="color:red">*</span></label>
                                <div class="col-md-4">
                                    @Html.DropDownList("mun_Codigo", (IEnumerable<SelectListItem>)ViewBag.MunicipioList, "Seleccione", new { @class = "single-line" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.mun_Codigo)</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Correo<span style="color:red">*</span></label>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.bod_Correo)
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.bod_Correo)</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Dirección<span style="color:red">*</span></label>
                                <div class="col-lg-10">
                                    @Html.TextAreaFor(model => model.bod_Direccion, new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.bod_Direccion)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.Partial("_CreateBodegaDetalle", new tbBodegaDetalle())
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/app/BodegaDetalle.js"></script>
    <script src="~/Scripts/app/Municipio.js"></script>
    @*@section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }*@

}