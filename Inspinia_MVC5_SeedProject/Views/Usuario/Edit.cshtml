@model ERP_GMEDINA.Models.tbUsuario

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Editar Usuario</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "" })
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.usu_Id)
                            <div><br /><br /></div>
                            <div class="form-group" style="padding-right:220px">
                                @Html.LabelFor(model => model.usu_NombreUsuario, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.usu_NombreUsuario, new { @class = "form-control", maxlength = "100" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.usu_NombreUsuario)
                                </div>


                                @Html.LabelFor(model => model.usu_Correo, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.usu_Correo, new { @class = "form-control", maxlength = "150" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.usu_Correo)</p>
                                </div>
                            </div>

                                <div class="form-group" style="padding-right:220px">
                                    @Html.LabelFor(model => model.usu_Nombres, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.usu_Nombres, new { @class = "form-control", maxlength = "150" })
                                        <p style="color:red">@Html.ValidationMessageFor(model => model.usu_Nombres)</p>

                                    </div>
                                    @Html.LabelFor(model => model.usu_Apellidos, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.usu_Apellidos, new { @class = "form-control", maxlength = "150" })
                                        <p style="color:red">@Html.ValidationMessageFor(model => model.usu_Apellidos)</p>
                                    </div>

                                </div>

                            <div class="form-group" style="padding-right:220px">
                                @Html.LabelFor(model => model.usu_EsActivo, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.usu_EsActivo, new {  @id = "usu_EsActivo" })
                                    @Html.ValidationMessageFor(model => model.usu_EsActivo)
                                </div>
                               
                                @Html.LabelFor(model => model.usu_EsAdministrador, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.usu_EsAdministrador, new { htmlAttributes = new { @class = "checkbox-inline" } })
                                    @Html.ValidationMessageFor(model => model.usu_EsAdministrador)
                                </div>
                            </div>

                            <div class="form-group" style="padding-right:220px" id="usu_RazonInactivo">
                                @Html.LabelFor(model => model.usu_RazonInactivo, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.usu_RazonInactivo)
                                    @Html.ValidationMessageFor(model => model.usu_RazonInactivo)
                                </div>
                            </div>

                            <div class="form-group" style="padding-right:220px">

                                @Html.LabelFor(model => model.usu_Password, new { @class = "control-label col-md-2 invisible" })
                                <div class="col-md-10">
                                    @Html.HiddenFor(model => model.usu_Password, new { @value = "password" })
                                    @*<input class="text-box single-line invisible" data-val="true" data-val-required="El campo Usuario es requerido" id="usu_Password" name="usu_Password" type="text" value="">*@
                                </div>

                            </div>


                            <div><br /></div>

                            <div style="padding-left :100px">
                                <input type="submit" value="Restaurar Contraseña" class="btn btn-primary" />
                                @Html.ActionLink("Modificar Contraseña", "ModificarPass", new { id = Model.usu_Id }, new { @class = "btn btn-primary" })
                            </div>
                            <div><br /><br /><br /></div>

                            <div class="col-md-5">
                                <label class="col-md-10" style="text-align:center">Roles No Asignados</label>
                                <table class="table table-bordered">
                                    <tr>
                                        <td style="color:white" bgcolor="#1ab394">Rol</td>
                                        <td bgcolor="#1ab394"></td>
                                    </tr>
                                    <tr>
                                        <td>Jefe de Bodega</td>
                                        <td><input name="id03" type="checkbox" id="id03" /></td>
                                    </tr>
                                    <tr>
                                        <td>Cajero</td>
                                        <td><input name="id03" type="checkbox" id="id03" /></td>
                                    </tr>
                                    <tr>
                                        <td>Auditor Interno</td>
                                        <td><input name="id03" type="checkbox" id="id03" /></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td><input name="id03" type="checkbox" id="id03" /></td>
                                    </tr>
                                </table>
                            </div>

                            <div class="col-md-2" align="center">
                                <br /><br /><br>
                                <input type="button" value="&#9668; Quitar &nbsp;&nbsp;" class="btn btn-primary btn-xs" />

                                <input type="button" value="Agregar &#9658;" class="btn btn-primary btn-xs" />

                            </div>

                            <div class="col-md-5">
                                <label class="col-md-10" style="text-align:center">Roles Asignados</label>
                                <table class="table table-bordered">
                                    <tr>
                                        <td style="color:white" bgcolor="#1ab394">Rol</td>
                                        <td bgcolor="#1ab394"></td>
                                    </tr>
                                    <tr>
                                        <td>Encargado de Bodega</td>
                                        <td><input name="id02" type="checkbox" id="id02" /></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-9"></div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @*@Html.ActionLink("Guardar", "Index", null, new { @class = "btn btn-primary" })*@
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>

                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

