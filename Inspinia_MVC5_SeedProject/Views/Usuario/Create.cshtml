@model ERP_GMEDINA.Models.tbUsuario

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Crear Usuario</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","Usuario")">Regresar</a>
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.usu_NombreUsuario, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.usu_NombreUsuario, new { @class = "form-control", maxlength = "100", placeholder="nombre.apellido" })
                    @Html.ValidationMessageFor(model => model.usu_NombreUsuario, "", new { @class = "text-danger", id = "NombreUsuario" })
                    <label id="msgUsuario"></label><br>
            </div>
            @Html.LabelFor(model => model.usu_Correo, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.usu_Correo, new { @class = "form-control", maxlength = "150", placeholder = "nombre.apellido@ejemplo.com" })
                @Html.ValidationMessageFor(model => model.usu_Correo, "", new { @class = "text-danger", id= "emailOK" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usu_Nombres, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.usu_Nombres, new { @class = "form-control", maxlength = "150" })
                @Html.ValidationMessageFor(model => model.usu_Nombres, "", new { @class = "text-danger" })
            </div>
        
            @Html.LabelFor(model => model.usu_Apellidos, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.usu_Apellidos, new { @class = "form-control", maxlength = "150" })
                @Html.ValidationMessageFor(model => model.usu_Apellidos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usu_Password, new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <input class="text-box single-line" data-val="true" data-val-required="El campo Password es requerido" id="usu_Password" maxlength="8" name="usu_Password" type="password" value="">
                @Html.ValidationMessageFor(model => model.usu_Password, "", new { @class = "text-danger", id="Password" })
                <label id="msg"></label><br>
            </div>

            @Html.LabelFor(model => model.ConfirmarPassword, new { @class = "control-label col-md-4" })
            <div class="col-md-2">
                <input class="text-box single-line" data-val="true" data-val-required="El campo Confirmar Password es requerido" id="confirmar-pass" maxlength="8" name="ConfirmarPassword" type="password" value="">
                @Html.ValidationMessageFor(model => model.ConfirmarPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div><br /><br /><br /></div>

        <div class="col-md-5">
            <label class="col-md-10" style="text-align:center">Roles No Asignados</label>
            <table class="table table-responsive" style="width:100%" id="NoAsignados">
                <thead>
                    <tr>
                        <td id="RegistrosNoAsignados" style="background-color:#1ab394;color:white">Rol</td>
                        <td style="background-color:#1ab394"></td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="col-md-2" align="center">
            <br /><br /><br>
            <div>
                <input id="AgregarRol" type="button" value="Agregar &#9658;" class="btn btn-primary btn-xs" />
            </div>
            <div>
                <input id="QuitarRol" type="button" value="&#9668; Quitar &nbsp;&nbsp;" class="btn btn-primary btn-xs" />
            </div>
        </div>

        <div class="col-md-5">
            <label class="col-md-10" style="text-align:center">Roles Asignados</label>
            <table class="table table-responsive" style="width:100%" id="Asignados">
                <thead>
                    <tr>
                        <td id="RegistrosAsignados" style="background-color:#1ab394;color:white">Rol</td>
                        <td style="background-color:#1ab394"></td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="col-md-9"></div>
        <div class="form-group text-center">
            <div class="col-md-12">
                <input type="submit" value="Guardar" class="btn btn-primary" id="btnGuardarUsuario"/>
                @*@Html.ActionLink("Guardar", "Index", null, new { @class = "btn btn-primary" })*@
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

 

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/RolesUsuario.js"></script>
