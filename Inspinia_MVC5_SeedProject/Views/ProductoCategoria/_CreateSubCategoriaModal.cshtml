@model ERP_GMEDINA.Models.tbProductoSubcategoria
@using ERP_GMEDINA.Models

@* CrearSubCategoria *@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear SubCategoría</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.pscat_Descripcion, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <input type="text" id="pscat_Descripcion" onkeypress="return soloLetras(event)" placeholder="" class="form-control" />
                                <div id="ErroDescripcion_Create">
                                    <p style="color:red">
                                        @Html.ValidationMessageFor(model => model.pscat_Descripcion)
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.pscat_ISV, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <input type="number" id="pscat_ISV" placeholder="" class="form-control" />
                                <div id="ErrorISV_Create">
                                    @Html.ValidationMessageFor(model => model.pscat_ISV)
                                </div>
                            </div>
                            <div class="form-group col-md-1">
                                <button class="btn btn-primary" type="button" id="AgregarSubCategoria">Añadir</button>
                            </div>
                        </div>
                        @*<div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button class="btn btn-primary" type="button" id="AgregarSubCategoria">Añadir</button>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>*@

                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>